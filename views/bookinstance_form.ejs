<h1><%= title %></h1>

<form method='POST' action=''>
    <div class="form-group">
        <label for='book'> Book: </label>
        <select id='book' class='form-control' placeholder='Select book' name='book' required />
        <% for (const book of book_list) { %>
          <option value='<%= book._id %>'>
            <%= book.title %>
          </option>
        <% } %>
        </select>
    </div>

    <div class="form-group">
      <label for='imprint'> Imprint: </label>
      <input type='text' id='imprint' class='form-control' placeholder='Publisher and date information' name='imprint' value='<%= typeof bookinstance == 'undefined' ? ' ' : bookinstance.imprint%>' required />
    </div>

  <div class="form-group">
    <label for='due_back'> Book available from: </label>
    <input type='date' id='due_back' class='form-control' name='due_back' value='<%= typeof bookinstance == 'undefined' ? ' ' : bookinstance.due_back%>' required />
  </div>

  <div class="form-group">
    <label for='status'> Status: </label>
    <select id='status' class='form-control' name='status' placeholder='Select status' required>
      <option value='Maintenance'> Maintenance </option>
      <option value='Available'> Available </option>
      <option value='Loaned'> Loaned </option>
      <option value='Reserved'> Reserved </option>
    </select>
  </div>
    
    <% if (typeof errors != 'undefined') { %> 
        <% for (const error of errors) { %>
            <p><%= error.msg %></p>
        <% } %>
    <% } %>

    <button class='btn btn-primary' type='submit'>Submit</button>
</form>