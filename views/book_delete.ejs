<h1><%=title  %>: <%= book.name  %></h1>

<% if ( instances_books.length ) { %>
    <p><strong>Delete the following copies before attempting to delete this book</strong></p>
    <div style='margin-left:20px;margin-top:20px'>
        <h4>Copies</h4>
        <dl>
            <% for (const instance of instances_books) { %>
                <dt>
                    <a href="<%= instance.url %>"> <%= instance._id %></a>
                </dt>
                <dd>
                    <%= instance.imprint %>
                </dd>
            <% } %>
        </dl>
    </div>
<% } else { %>
    <p>Do you really want to delete this book?</p>
    <form method="POST" action="">
        <div class='form-group'>
            <input type="hidden" name="bookid" id="bookid" class="form-control"  value="<%= book._id%>" required />
        </div>
        <button class="btn btn-primary" type="submit">Delete</button>
    </form>  
<% } %>